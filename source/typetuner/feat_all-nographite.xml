		<test select="Lng-Kyr Kas-Low">
			<cmd name="lookup_add" args="GSUB {ccmp_arab_dflt} {KasraLow}"/>
			<cmd name="lookup_add" args="GSUB {ccmp_latn_dflt} {KasraLow}"/>
