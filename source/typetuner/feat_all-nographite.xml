			<cmd name="null" args="null"/>
		</value>
		<value name="Downward" tag="Dn">					<!-- was "True", "T" -->
			<cmd name="encode" args="060C uni060C.downward"/>
			<cmd name="encode" args="061B uni061B.downward"/>
		</value>
	</feature>

