		</value>
		<value name="True" tag="T">
			<cmd name="lookup_add" args="GSUB {liga_arab_dflt} {ProportionalFigures}"/>
		</value>
	</feature>

	<feature name="Tabular figures" value="False" tag="Tf">
		<value name="False" tag="F">
			<cmd name="null" args="null"/>
		</value>
		<value name="True" tag="T">
			<cmd name="lookup_add" args="GSUB {liga_arab_dflt} {TabularFigures}"/>
		</value>
	</feature>

	<feature name="Disable digit kerning (see FAQ)" value="False" tag="Ddk">
		<value name="False" tag="F">
			<cmd name="null" args="null"/>
		</value>
		<value name="True" tag="T">
			<cmd name="lookup_del" args="GPOS {kern_arab_dflt} {kernpairs}"/>
		</value>
	</feature>

	<feature name="Comma" value="Upward" tag="Cma"> 		<!-- was "Downward comma", "Dc" -->
