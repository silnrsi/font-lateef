			{attach {to=@S; at=point(diaA.x,diaA.y-80m); with=diaA_}; }
		/ _ ^ MARKSBELOW  _;

	absHamzaAbove=H
		(absFatha absDamma absFathatan absDammatan)
			{attach {to=@H; at=point(diaA.x+40m,diaA.y-80m); with=diaA_}; }
